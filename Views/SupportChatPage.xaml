<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GamerLinkApp.ViewModels"
             x:Class="GamerLinkApp.Views.SupportChatPage"
             x:DataType="vm:SupportChatViewModel"
             BackgroundColor="#F4F5F7"
             Shell.TabBarIsVisible="False"
             Title="智能客服">
    <Grid RowDefinitions="Auto,*">
        <Border StrokeThickness="0"
                BackgroundColor="White"
                Padding="16,24,16,20">
            <Border.Shadow>
                <Shadow Brush="#14000000"
                        Offset="0,4"
                        Radius="12" />
            </Border.Shadow>
            <Grid ColumnDefinitions="Auto,*,Auto"
                  ColumnSpacing="12">
                <!-- 左侧返回按钮，占据第一列 -->
                <ImageButton Grid.Column="0"
                             Source="goback.png"
                             WidthRequest="44"
                             HeightRequest="44"
                             BackgroundColor="Transparent"
                             Padding="0"
                             Clicked="OnBackClicked"
                             SemanticProperties.Description="返回上一页" />

                <!-- 中间标题，占据第二列并在此列中居中 -->
                <Label Grid.Column="1"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Text="智能客服"
                    TextColor="#1A1A1A"
                    FontSize="18"
                    FontAttributes="Bold" />
                
                <!-- 右侧占位元素，宽度与左侧按钮相同，保证中间标题完美居中 -->
                <BoxView Grid.Column="2"
                        WidthRequest="44"
                        HeightRequest="44"
                        Color="Transparent" />
            </Grid>
        </Border>

        <Grid Grid.Row="1"
              RowDefinitions="*,Auto,Auto"
              Padding="16">
            <CollectionView x:Name="MessagesCollectionView"
                            Grid.Row="0"
                            ItemsSource="{Binding Messages}"
                            ItemsLayout="VerticalList"
                            Margin="0,0,0,12"
                            ItemSizingStrategy="MeasureAllItems"
                            VerticalScrollBarVisibility="Never">
                <CollectionView.EmptyView>
                    <VerticalStackLayout Padding="32"
                                         Spacing="8"
                                         HorizontalOptions="Center"
                                         VerticalOptions="Center">
                        <Label Text="客服助手正在为您待命"
                               TextColor="#8A8FA6"
                               FontSize="14"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vm:SupportChatMessage">
                        <Grid Padding="0,6">
                            <HorizontalStackLayout Spacing="10"
                                                   VerticalOptions="Start">
                                <HorizontalStackLayout.Triggers>
                                    <DataTrigger TargetType="HorizontalStackLayout"
                                                 Binding="{Binding IsUser}"
                                                 Value="True">
                                        <Setter Property="HorizontalOptions"
                                                Value="End" />
                                        <Setter Property="FlowDirection"
                                                Value="RightToLeft" />
                                    </DataTrigger>
                                </HorizontalStackLayout.Triggers>
                                <Border WidthRequest="36"
                                        HeightRequest="36"
                                        StrokeThickness="0"
                                        BackgroundColor="#E5E7EB"
                                        VerticalOptions="Start">
                                    <Border.StrokeShape>
                                        <Ellipse />
                                    </Border.StrokeShape>
                                    <Border.Triggers>
                                        <DataTrigger TargetType="Border"
                                                     Binding="{Binding IsUser}"
                                                     Value="True">
                                            <Setter Property="BackgroundColor"
                                                    Value="#CBD5F5" />
                                        </DataTrigger>
                                    </Border.Triggers>
                                    <Image Source="{Binding AvatarPath}"
                                           Aspect="AspectFill"
                                           WidthRequest="36"
                                           HeightRequest="36">
                                        <Image.Clip>
                                            <EllipseGeometry Center="18,18"
                                                             RadiusX="18"
                                                             RadiusY="18" />
                                        </Image.Clip>
                                    </Image>
                                </Border>
                                <Border Padding="14,12"
                                        BackgroundColor="#FFFFFF"
                                        StrokeThickness="0">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="18" />
                                    </Border.StrokeShape>
                                    <Border.Triggers>
                                        <DataTrigger TargetType="Border"
                                                     Binding="{Binding IsUser}"
                                                     Value="True">
                                            <Setter Property="BackgroundColor"
                                                    Value="#5B61FF" />
                                        </DataTrigger>
                                    </Border.Triggers>
                                    <VerticalStackLayout Spacing="4">
                                        <Label Text="{Binding Content}"
                                               TextColor="#1A1A1A"
                                               FontSize="14"
                                               LineBreakMode="CharacterWrap">
                                            <Label.Triggers>
                                                <DataTrigger TargetType="Label"
                                                             Binding="{Binding IsUser}"
                                                             Value="True">
                                                    <Setter Property="TextColor"
                                                            Value="White" />
                                                </DataTrigger>
                                            </Label.Triggers>
                                        </Label>
                                        <Border BackgroundColor="#F3F4FF"
                                                StrokeThickness="0"
                                                Padding="10,8"
                                                IsVisible="{Binding HasErrorDetail}">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="12" />
                                            </Border.StrokeShape>
                                            <Label Text="{Binding ErrorDetail}"
                                                   TextColor="#454C9A"
                                                   FontSize="12"
                                                   LineHeight="1.2"
                                                   LineBreakMode="CharacterWrap" />
                                        </Border>
                                    </VerticalStackLayout>
                                </Border>
                            </HorizontalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <VerticalStackLayout Grid.Row="1"
                                 Spacing="6"
                                 Margin="0,0,0,12"
                                 IsVisible="{Binding HasPopularQuestions}">
                <Label Text="热门问题推荐"
                       FontSize="12"
                       TextColor="#6B7280"
                       Margin="4,0,0,0" />
                <ScrollView Orientation="Horizontal"
                            HorizontalScrollBarVisibility="Never">
                    <HorizontalStackLayout Spacing="8"
                                           BindableLayout.ItemsSource="{Binding PopularQuestions}">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate x:DataType="x:String">
                                <Button Text="{Binding .}"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SupportChatViewModel}}, Path=SelectPopularQuestionCommand}"
                                        CommandParameter="{Binding .}"
                                        Padding="16,10"
                                        MinimumWidthRequest="140"
                                        BackgroundColor="#EEF2FF"
                                        BorderColor="#C7D2FE"
                                        BorderWidth="1"
                                        CornerRadius="22"
                                        TextColor="#1F2933"
                                        FontSize="13"
                                        HorizontalOptions="Start"
                                        VerticalOptions="Center"
                                        LineBreakMode="WordWrap"
                                        SemanticProperties.Hint="点击快速输入该问题" />
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </HorizontalStackLayout>
                </ScrollView>
            </VerticalStackLayout>

            <Border Grid.Row="2"
                    StrokeThickness="0"
                    BackgroundColor="White"
                    Padding="12">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="#14000000"
                            Offset="0,6"
                            Radius="12" />
                </Border.Shadow>
                <Grid ColumnDefinitions="*,Auto"
                      ColumnSpacing="12"
                      VerticalOptions="Center">
                    <Entry Grid.Column="0"
                           Text="{Binding UserInput}"
                           Placeholder="请描述你遇到的问题"
                           FontSize="14"
                           BackgroundColor="Transparent"
                           TextColor="#1A1A1A"
                           IsEnabled="{Binding CanEdit}"
                           ReturnType="Send"
                           ReturnCommand="{Binding SendMessageCommand}" />
                    <Grid Grid.Column="1"
                          WidthRequest="96"
                          HorizontalOptions="End">
                        <Button Text="发送"
                                Padding="18,10"
                                CornerRadius="16"
                                BackgroundColor="#5B61FF"
                                TextColor="White"
                                Command="{Binding SendMessageCommand}"
                                IsEnabled="{Binding CanEdit}" />
                        <Border BackgroundColor="#5B61FF"
                                StrokeThickness="0"
                                IsVisible="{Binding IsBusy}"
                                InputTransparent="True">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="16" />
                            </Border.StrokeShape>
                            <Grid Padding="0"
                                  HorizontalOptions="Center"
                                  VerticalOptions="Center">
                                <Image Source="stop.png"
                                       WidthRequest="20"
                                       HeightRequest="20"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" />
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</ContentPage>
