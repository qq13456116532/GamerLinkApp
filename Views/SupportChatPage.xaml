<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GamerLinkApp.ViewModels"
             x:Class="GamerLinkApp.Views.SupportChatPage"
             x:DataType="vm:SupportChatViewModel"
             BackgroundColor="#F4F5F7"
             Shell.TabBarIsVisible="False"
             Title="智能客服">
    <Grid RowDefinitions="Auto,*">
        <Border StrokeThickness="0"
                BackgroundColor="White"
                Padding="16,24,16,20">
            <Border.Shadow>
                <Shadow Brush="#14000000"
                        Offset="0,4"
                        Radius="12" />
            </Border.Shadow>
            <Grid ColumnDefinitions="Auto,*"
                  ColumnSpacing="12">
                <Button Text="返回"
                        WidthRequest="60"
                        HeightRequest="44"
                        FontSize="16"
                        BackgroundColor="Transparent"
                        TextColor="#1A1A1A"
                        Clicked="OnBackClicked" />
                <Label Grid.Column="1"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Text="智能客服"
                       TextColor="#1A1A1A"
                       FontSize="18"
                       FontAttributes="Bold" />
            </Grid>
        </Border>

        <Grid Grid.Row="1"
              RowDefinitions="*,Auto"
              Padding="16">
            <CollectionView x:Name="MessagesCollectionView"
                            Grid.Row="0"
                            ItemsSource="{Binding Messages}"
                            ItemsLayout="VerticalList"
                            Margin="0,0,0,12"
                            ItemSizingStrategy="MeasureAllItems"
                            VerticalScrollBarVisibility="Never">
                <CollectionView.EmptyView>
                    <VerticalStackLayout Padding="32"
                                         Spacing="8"
                                         HorizontalOptions="Center"
                                         VerticalOptions="Center">
                        <Label Text="客服助手正在为您待命"
                               TextColor="#8A8FA6"
                               FontSize="14"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vm:SupportChatMessage">
                        <Grid Padding="0,6">
                            <HorizontalStackLayout>
                                <HorizontalStackLayout.Triggers>
                                    <DataTrigger TargetType="HorizontalStackLayout"
                                                 Binding="{Binding IsUser}"
                                                 Value="True">
                                        <Setter Property="HorizontalOptions"
                                                Value="End" />
                                    </DataTrigger>
                                </HorizontalStackLayout.Triggers>
                                <Border Padding="14,12"
                                        BackgroundColor="#FFFFFF"
                                        StrokeThickness="0">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="18" />
                                    </Border.StrokeShape>
                                    <Border.Triggers>
                                        <DataTrigger TargetType="Border"
                                                     Binding="{Binding IsUser}"
                                                     Value="True">
                                            <Setter Property="BackgroundColor"
                                                    Value="#5B61FF" />
                                        </DataTrigger>
                                    </Border.Triggers>
                                    <Label Text="{Binding Content}"
                                           TextColor="#1A1A1A"
                                           FontSize="14"
                                           LineBreakMode="WordWrap">
                                        <Label.Triggers>
                                            <DataTrigger TargetType="Label"
                                                         Binding="{Binding IsUser}"
                                                         Value="True">
                                                <Setter Property="TextColor"
                                                        Value="White" />
                                            </DataTrigger>
                                        </Label.Triggers>
                                    </Label>
                                </Border>
                            </HorizontalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Border Grid.Row="1"
                    StrokeThickness="0"
                    BackgroundColor="White"
                    Padding="12">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="#14000000"
                            Offset="0,6"
                            Radius="12" />
                </Border.Shadow>
                <Grid ColumnDefinitions="*,Auto,Auto"
                      ColumnSpacing="12"
                      VerticalOptions="Center">
                    <Entry Grid.Column="0"
                           Text="{Binding UserInput}"
                           Placeholder="请描述你遇到的问题"
                           FontSize="14"
                           BackgroundColor="Transparent"
                           TextColor="#1A1A1A"
                           IsEnabled="{Binding CanEdit}"
                           ReturnType="Send"
                           ReturnCommand="{Binding SendMessageCommand}" />
                    <Button Grid.Column="1"
                            Text="发送"
                            Padding="18,10"
                            CornerRadius="16"
                            BackgroundColor="#5B61FF"
                            TextColor="White"
                            Command="{Binding SendMessageCommand}" />
                    <ActivityIndicator Grid.Column="2"
                                       WidthRequest="24"
                                       HeightRequest="24"
                                       IsRunning="{Binding IsBusy}"
                                       IsVisible="{Binding IsBusy}"
                                       VerticalOptions="Center" />
                </Grid>
            </Border>
        </Grid>
    </Grid>
</ContentPage>
