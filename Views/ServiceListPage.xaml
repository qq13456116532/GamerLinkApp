<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:GamerLinkApp.Models"
             x:Class="GamerLinkApp.Views.ServiceListPage"
             Title="服务列表">
    <CollectionView ItemsSource="{Binding Services}"
                    SelectionMode="Single"
                    SelectionChanged="OnServiceSelected">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:Service">
                <Frame Padding="10" Margin="10" CornerRadius="5" BorderColor="LightGray" HasShadow="True">
                    <VerticalStackLayout>
                        <Label Text="{Binding Title}" FontSize="Large" FontAttributes="Bold"/>
                        <Label Text="{Binding GameName}" FontSize="Medium"/>
                        <Label Text="{Binding Price, StringFormat='价格: ¥{0}'}" TextColor="Red" HorizontalOptions="End"/>
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>